                    </Parameter>
                    <Parameter>
                        <Name>Data</Name>
                        <InputDataType>
                            <DataTypeName>UnsignedHexByte</DataTypeName>
                        </InputDataType>
                        <TrafficDataType>
                            <DataTypeName>UnsignedHexByte</DataTypeName>
                        </TrafficDataType>
                        <Units>Dimensionless</Units>
                        <Regex>^[0-9A-Fa-f][0-9A-Fa-f]$</Regex>
                        <Tooltip>Allowed Values: 00 to FF Hex. See the I2C device data sheets.</Tooltip>
                    </Parameter>
                    <SendToPort>true</SendToPort>
                    <Ack>
                        <Name>Ack</Name>
                    </Ack>
